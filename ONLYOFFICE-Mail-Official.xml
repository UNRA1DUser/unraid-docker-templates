  <Config Name="Database Password" Target="MYSQL_ROOT_PASSWD" Default="Isadmin123" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false">Isadmin123</Config>
  <Config Name="Data" Target="/var/vmail" Default="/mnt/user/appdata/onlyoffice-official/onlyoffice-mail-official/data" Mode="rw" Description="ONLYOFFICE Mail Server Data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/onlyoffice-official/onlyoffice-mail-server-official/data</Config>
  <Config Name="Logs" Target="/var/log" Default="/mnt/user/appdata/onlyoffice-official/onlyoffice-mail-official/logs" Mode="rw" Description="ONLYOFFICE Mail Server Logs" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/onlyoffice-official/onlyoffice-mail-server-official/logs</Config>
