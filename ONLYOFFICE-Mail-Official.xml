  <Config Name="SMTP_TCP_PORT" Target="25" Default="25" Mode="tcp" Description="25: SMTP - The default port for the Simple Mail Transfer Protocol, used to transfer email messages from source to destination between mail servers and used by end users to send email to a mail system." Type="Port" Display="always" Required="true" Mask="false">25</Config>
  <Config Name="IMAP_STARTTLS_TCP_PORT" Target="143" Default="143" Mode="tcp" Description="143: IMAP STARTTLS - The default port for the Internet Message Access Protocol using STARTTLS connection, which is used to retrieve email messages from the server without the need to download them to the client; if STARTTLS connection is not available an insecure connection will be used." Type="Port" Display="always" Required="true" Mask="false">143</Config>
  <Config Name="SMTP_STARTTLS_TCP_PORT" Target="587" Default="587" Mode="tcp" Description="587: SMTP STARTTLS - The default port for the Simple Mail Transfer Protocol Secure, used to transfer email messages from source to destination between the mail servers and used by end users to send email to a mail system via secure connection using TLS." Type="Port" Display="always" Required="true" Mask="false">587</Config>
  <Config Name="MySQL Server Address" Target="MYSQL_SERVER" Default="onlyoffice-mysql-server" Mode="" Description="MYSQL_SERVER IP-ADDRESS" Type="Variable" Display="always" Required="true" Mask="false">onlyoffice-mysql-server</Config>
